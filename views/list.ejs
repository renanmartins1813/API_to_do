<%- include('header') %>  

    <div class="box" id="heading">
        <h1><%= title_ejs %></h1>
    </div>
    
    <div class="box">
        
        <% newListItems.forEach( item=>{ %>
            <form action="/delete" method="post">
                <div class="item" >
                    <input type="checkbox" name='rm_item' value='<%= item._id %>'  onChange="this.form.submit()">
                    <p><%= item.name %></p>
                </div>
                <input type="hidden" name="title_ejs" value="<%=title_ejs%>">
            </form>
        <% }); %>

        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="submit_button" value="<%=title_ejs%>">+</button>
        </form>
    </div>
        
<%- include('footer') %> 
